{
  "name": "foxyswitch-api",
  "version": "1.0.0",
  "description": "Foxy Switch API",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "pi-start": "sudo systemctl start foxyswitch-api.service",
    "pi-stop": "sudo systemctl stop foxyswitch-api.service",
    "pi-restart": "sudo systemctl restart foxyswitch-api.service",
    "pi-install": "bash ./pi/install.sh",
    "pi-uninstall": "bash ./pi/uninstall.sh",
    "pi-update": "git pull && npm install && npm run build && npm run pi-restart",
    "configure": "tsx ./src/scripts/configure.ts",
    "update-credentials": "tsx ./src/scripts/update/credentials.ts",
    "update-ip": "tsx ./src/scripts/update/ip.ts",
    "update-port": "tsx ./src/scripts/update/port.ts"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.8.1",
    "@types/node": "^22.7.2",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fastify": "^5.4.0",
    "socket.io-client": "^4.8.1"
  }
}
