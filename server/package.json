{
  "name": "foxyswitch-api",
  "version": "1.0.0",
  "description": "Foxy Switch API",
  "main": "foxyswitch-api.js",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "start": "ts-node ./dist/index.js",
    "pi-install": "bash ./pi/install.sh",
    "pi-uninstall": "bash ./pi/uninstall.sh",
    "configure": "ts-node ./scripts/configure.ts",
    "update-credentials": "ts-node ./scripts/update/credentials.ts",
    "update-ip": "ts-node ./scripts/update/ip.ts",
    "update-port": "ts-node ./scripts/update/port.ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.2",
    "@types/node-cron": "^3.0.11",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "@stdlib/error-to-json": "^0.2.2",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "node-cron": "^3.0.3"
  }
}
